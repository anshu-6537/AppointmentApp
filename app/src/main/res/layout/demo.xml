<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#068E99"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cardio"
        android:id="@+id/cardio"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cardio"
        app:layout_constraintLeft_toLeftOf="@id/cardio"
        app:layout_constraintRight_toRightOf="@id/cardio"
        android:text="Cardiologist"
        android:fontFamily="@font/candal"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/neuro"
        android:id="@+id/neuro"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/neuro"
        app:layout_constraintLeft_toLeftOf="@id/neuro"
        app:layout_constraintRight_toRightOf="@id/neuro"
        android:text="Neurologist"
        android:fontFamily="@font/candal"
        />

    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/pedit"
    android:id="@+id/Pediatrician"
    android:layout_marginTop="225dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="25dp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Pediatrician"
        app:layout_constraintLeft_toLeftOf="@id/Pediatrician"
        app:layout_constraintRight_toRightOf="@id/Pediatrician"
        android:text="Pediatrician"
        android:fontFamily="@font/candal"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ortho"
        android:id="@+id/Ortho"
        android:layout_marginTop="225dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Ortho"
        app:layout_constraintLeft_toLeftOf="@id/Ortho"
        app:layout_constraintRight_toRightOf="@id/Ortho"
        android:text="Orthopedist"
        android:fontFamily="@font/candal"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/dental"
        android:id="@+id/Dento"
        android:layout_marginTop="415dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Dento"
        app:layout_constraintLeft_toLeftOf="@id/Dento"
        app:layout_constraintRight_toRightOf="@id/Dento"
        android:text="Dental"
        android:fontFamily="@font/candal"
        />

    <Button
        android:id="@+id/button_find_doctors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#F88012"
        android:text="Find Doctor"
        android:textAllCaps="false"
        android:fontFamily="@font/candal"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />





</androidx.constraintlayout.widget.ConstraintLayout>